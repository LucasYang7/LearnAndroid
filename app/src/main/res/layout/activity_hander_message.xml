<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yangzhe.learnhandler.HanderMessageActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Empty Message"
        android:id="@+id/buttonSendEmptyMessage"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textViewShowMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Empty Message Delayed"
        android:id="@+id/buttonSendEmptyMessageDelayed"
        android:layout_below="@+id/buttonSendEmptyMessage"
        android:layout_alignLeft="@+id/buttonSendEmptyMessage"
        android:layout_alignStart="@+id/buttonSendEmptyMessage"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:id="@+id/buttonSendMessage"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonSendEmptyMessageDelayed"
        android:layout_alignLeft="@+id/buttonSendEmptyMessageDelayed"
        android:layout_alignStart="@+id/buttonSendEmptyMessageDelayed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message Delay"
        android:id="@+id/buttonSendMessageDelay"
        android:layout_below="@+id/buttonSendMessage"
        android:layout_alignRight="@+id/buttonSendEmptyMessage"
        android:layout_alignEnd="@+id/buttonSendEmptyMessage"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewShowMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

</RelativeLayout>
