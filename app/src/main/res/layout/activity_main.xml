<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yangzhe.learnactivity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show a dialog"
        android:id="@+id/buttonShowDialog"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show a dialog activity"
        android:id="@+id/buttonShowDialogActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto Handler Activity"
        android:id="@+id/buttonGotoHandlerActivity"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/buttonShowDialogActivity"
        android:layout_alignLeft="@+id/buttonShowDialogActivity"
        android:layout_alignStart="@+id/buttonShowDialogActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto Handler Message Activity"
        android:id="@+id/buttonGotoHandlerMessageActivity"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonGotoHandlerActivity"
        android:layout_alignLeft="@+id/buttonGotoHandlerActivity"
        android:layout_alignStart="@+id/buttonGotoHandlerActivity" />
</RelativeLayout>
