<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yangzhe.learnhandler.HandlerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPostRunnable"
        android:text="post an runnable"
        android:layout_above="@+id/buttonPostDelayRunnable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post an delay runnable"
        android:id="@+id/buttonPostDelayRunnable"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonPostRunnable"
        android:layout_alignStart="@+id/buttonPostRunnable" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewShowRunnable"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonPostDelayRunnable"
        android:layout_alignStart="@+id/buttonPostDelayRunnable"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run on UI thread"
        android:id="@+id/buttonRunOnUiThread"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/buttonPostDelayRunnable"
        android:layout_alignRight="@+id/buttonPostRunnable"
        android:layout_alignEnd="@+id/buttonPostRunnable" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post an Runnable action from SubHandler"
        android:id="@+id/buttonPostRunnableFromSubHandler"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/buttonRunOnUiThread"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonTestThreadLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPostRunnableFromSubHandler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Test ThreadLoacal." />
</RelativeLayout>
